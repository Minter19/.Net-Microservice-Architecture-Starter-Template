{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "catalog-api-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      
      "catalog-swagger-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/swagger/catalog/{**catch-all}" 
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog.api:8080" 
          }
        }
      }
    }
  }
}